<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_secondary_background">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
        android:layout_marginBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">



            <ImageView
                android:id="@+id/imageViewAppIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewAppName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="App Name"
                android:textColor="@color/PrimaryTextColor"
                android:textSize="22sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/buttonUninstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_uninstall"
                android:background="@drawable/button_primary_background"
                app:tint="@color/SecondaryTextColor"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                />

            <ImageButton
                android:id="@+id/buttonAppInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_appinfo"
                android:background="@drawable/button_primary_background"
                app:tint="@color/SecondaryTextColor"
                android:padding="8dp"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="QUICK PAUSE APP"
            android:textColor="@color/PrimaryTextColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="Note: Once paused, you won't be able to open this popup or unpause"
            android:textColor="@color/SecondaryTextColor"
            android:textSize="12sp"
            android:textStyle="italic"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPauseFor1Hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/button_primary_background"
            android:elevation="0dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:paddingHorizontal="18dp"
            android:stateListAnimator="@null"
            android:text="Pause for 1 hour"
            android:textAllCaps="false"
            android:textColor="@color/PrimaryTextColor"
            android:textSize="18sp"
            android:textAlignment="textStart"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPauseForTheDay"
            android:text="Pause for the day"
            android:textSize="18sp"
            android:background="@drawable/button_primary_background"
            android:textColor="@color/PrimaryTextColor"
            android:paddingHorizontal="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textAlignment="textStart"/>

    </LinearLayout>

</LinearLayout>
