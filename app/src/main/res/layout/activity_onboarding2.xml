<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:src="@drawable/onboarding_illustration_2"
        app:layout_constraintBottom_toTopOf="@+id/textViewHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Stay Focused"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textStyle="bold"
        android:textColor="@color/PrimaryTextColor"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewContent"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Our minimalist design helps you focus on what truly matters. Say goodbye to distractions and hello to productivity."
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/SecondaryTextColor"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext2"
        app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
        android:id="@+id/buttonNext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bar_background"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Next"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textStyle="bold"
                android:textColor="@color/PrimaryTextColor"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"
                android:textAlignment="center"/>



        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>