        <!-- First overlay layer for better touch handling -->
        <View
            android:id="@+id/alphabetOverlay1"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp" />

        <!-- Second overlay layer for maximum touch priority -->
        <View
            android:id="@+id/alphabetOverlay2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp" />

        <!-- Selected letter indicator overlay -->
        <TextView
            android:id="@+id/selectedLetterIndicator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/search_bar_background"
            android:text="A"
            android:textSize="36sp"
            android:textColor="@color/PrimaryTextColor"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_display_bold"
            android:visibility="gone"
            android:elevation="8dp" />

    </RelativeLayout>

    <!-- Search bar container - positioned at bottom to move above keyboard -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/PrimaryBackgroundColor"
        android:elevation="8dp">

        <EditText
            android:id="@+id/ETHomeSearchField"
            android:hint="Search"
            android:inputType="text"
            android:background="@drawable/search_bar_background"
            android:paddingTop="12dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/SecondaryTextColor"
            android:textColor="@color/PrimaryTextColor"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:drawableStart="@drawable/ic_search"
            android:drawableTint="@color/SecondaryTextColor"
            android:drawablePadding="15dp"
            android:imeOptions="actionSearch"/>

    </LinearLayout>

</LinearLayout>
