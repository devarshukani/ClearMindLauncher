<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_secondary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Stop. Don't make life easier for distractions"
            android:textColor="@color/PrimaryTextColor"
            android:textSize="22sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textViewRealityCheckMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="Adding %s to your Favorites is basically giving distractions a VIP pass. If you value your time, don't add it. If you insist, we'll add it, but don't blame the launcher when your day disappears."
            android:textColor="@color/SecondaryTextColor"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonChangedMind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_primary_background"
            android:elevation="0dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:paddingHorizontal="18dp"
            android:stateListAnimator="@null"
            android:text="I changed my mind"
            android:textAllCaps="false"
            android:textColor="@color/PrimaryTextColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/buttonAddAnyway"
            android:text="Add anyway"
            android:textSize="16sp"
            android:textColor="@color/SecondaryTextColor"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/buttonUninstallLauncher"
            android:text="Uninstall launcher"
            android:textSize="14sp"
            android:textColor="#FF6B6B"
            android:paddingHorizontal="18dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>
