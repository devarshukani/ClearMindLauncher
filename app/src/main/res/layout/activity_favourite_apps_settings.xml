<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FavouriteAppsSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Favourite Apps"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textColor="@color/PrimaryTextColor"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Selected Apps:  "
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/SecondaryTextColor"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/textViewSelectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="0"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/SecondaryTextColor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=" / 6"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/SecondaryTextColor"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/ETSearchField"
            android:hint="Search"
            android:inputType="text"
            android:background="@drawable/search_bar_background"
            android:paddingTop="12dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/SecondaryTextColor"
            android:textColor="@color/PrimaryTextColor"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_search"
            android:drawableTint="@color/SecondaryTextColor"
            android:drawablePadding="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/app_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"/>

    </LinearLayout>



</LinearLayout>